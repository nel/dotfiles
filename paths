if [[ -n $mvim_path ]]; then
    export EDITOR="$mvim_path -f -g"

    #fix problem with loss of focus
    if [[ "$TERM_PROGRAM" == "iTerm.app" ]]; then
        export EDITOR="$EDITOR -c \"au VimLeave * !open -a iTerm\""
    elif [[ "$TERM_PROGRAM" == "Apple_Terminal" ]]; then
        export EDITOR="$EDITOR -c \"au VimLeave * !open -a Terminal\""
    fi
else
    export EDITOR='/usr/bin/vi'
fi

export GIT_EDITOR=$EDITOR

export PATH="$HOME/.bin:$PATH:$HOME/.gem/ruby/1.8/bin"

export LC_ALL="en_US.UTF-8"

if [[ -n $brew_path ]]; then
    export PATH=$brew_path/bin:$brew_path/sbin:$PATH
    export MANPATH=$brew_path/share/man:$MANPATH
fi
