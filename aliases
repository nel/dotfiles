alias g='git'
alias gs='git status -sb'
alias gsu='git submodule update --init'
alias gl='git log'
alias glp='git log -p'
alias glo='git lo'
alias ga='git add'
alias gb='git branch'
alias gc='git commit'
alias gca='git commit --amend'
alias gm='git commit -m'
alias gm.='git commit . -m'
alias grm='git commit -fr'
alias gd='git diff'
alias go='git checkout'
alias gh='git push'
alias gp='git pull'
alias gpr='git pull --rebase'
alias gr='git rebase'
alias gri='git rebase -i'
alias grt='git reset'
alias gcl='git clean -fd'

alias flushcache='dscacheutil -flushcache'
alias top='top -ocpu'

alias ev="vi ~/.vimrc"
alias eb="vi ~/.bashrc"
alias sb="source ~/.bashrc"
alias ez="vi ~/.zshrc"
alias sz="source ~/.zshrc"

alias ll="ls -lah"
alias lm='ll | less'
alias sl=ls

[ $has_mvim ] && alias vi="${NB_EDITOR} --remote-tab-silent"
